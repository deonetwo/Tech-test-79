@page
@model DewaApp.Pages.AccountTransactions.IndexModel
@{
}

<br>
<h2> List of Transactions </h2>
<a class='btn btn-primary btn-sm' href='/AccountTransactions/Insert'> New Transactions </a>
<table class="table">
    <thead>
        <tr>
            <th>AccountId</th>
            <th>Transaction Date</th>
            <th>Description</th>
            <th>Debit/Credit</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AccountTransactions)
        {
            <tr>
                <td>@item.AccountId</td>
                <td>@item.TransactionDate</td>
                <td>@item.Description</td>
                <td>@item.DebitCreditStatus</td>
                <td>@item.Amount</td>
            </tr>
        }
    </tbody>
</table>