@page
@model DewaApp.Pages.AccountTransactions.InsertModel
@{
}


<br>
<h2>New Transaction</h2>

@if (Model.errorMsg.Length > 0)
{
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMsg</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="post">
    <div class="row mb-3">
        <label class="col-sm-3col-form-label">AccountId</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="accountId" value="@Model.accountTransaction.AccountId">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3col-form-label">Transaction Date</label>
        <div class="col-sm-6">
            <input type="date" class="form-control" name="transactionDate" value="@Model.accountTransaction.TransactionDate">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3col-form-label">Description</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="description" value="@Model.accountTransaction.Description">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3col-form-label">Debit/Credit Status</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="debitCreditStatus" value="@Model.accountTransaction.DebitCreditStatus">
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3col-form-label">Amount</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" name="amount" value="@Model.accountTransaction.Amount">
        </div>
    </div>

    @if (Model.successMsg.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alertalert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMsg</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
                </div>
            </div>
        </div>
    }

    <div class="row mb-3">
        <div class="col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
        </div>
    </div>
</form>